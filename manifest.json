{
  "manifest_version": 2,
  "name": "Persona Builder",
  "version": "0.1.0",
  "description": "Stub for capturing HTML snapshots for a Firefox persona YAML.",
  "permissions": ["activeTab"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Persona Builder",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
