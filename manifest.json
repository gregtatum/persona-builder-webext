{
  "manifest_version": 2,
  "name": "Persona Builder",
  "version": "3.0.0",
  "description": "Stub for capturing HTML snapshots for a Firefox persona YAML.",
  "icons": {
    "48": "assets/icons/person-dark-48.png",
    "96": "assets/icons/person-dark-96.png",
    "128": "assets/icons/person-dark-128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": false,
    "type": "module"
  },
  "browser_action": {
    "default_title": "Persona Builder",
    "default_popup": "src/popup.html",
    "default_icon": {
      "19": "assets/icons/person-dark-19.png",
      "38": "assets/icons/person-dark-38.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{9aa8897e-56b8-4c24-a778-deb989d97c63}",
      "strict_min_version": "109.0"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "example-log-command": {
      "description": "Log that the example command works",
      "suggested_key": {
        "default": "F2",
        "mac": "F2"
      }
    }
  },
  "options_ui": {
    "page": "src/options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    "src/content.mjs",
    "src/options.css",
    "vendor/singlefile/single-file.js"
  ]
}
