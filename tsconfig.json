{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "types": ["firefox-webext-browser", "jest"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.js", "**/*.mjs", "manifest.json"],
  "exclude": ["node_modules", "dist", "SingleFile/**", "tools/**"]
}
